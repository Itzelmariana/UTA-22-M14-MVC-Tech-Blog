<div class="container mt-5">
  <h1 class="mb-5 titleHomepage">Latest posts:</h1>

  {{#each projects as |project|}}

    <div class="row postTitle">
      <div class="col-6">
        <h2>
          <a href="/project/{{project.id}}">{{project.name}}</a>
        </h2>
      </div>
      <div class="col-6 postDate">
        <p>Created by
          {{project.user.name}}
          on
          {{format_date project.date_created}}</p>
      </div>

    </div>
    <div class="row mb-4 cardHomepage">
      <div class="col-md-12">
        <p>
          {{project.description}}
        </p>
      </div>
    </div>

  {{/each}}

</div>