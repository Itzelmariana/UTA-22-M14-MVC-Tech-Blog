<div class="container mt-10">
  <div class="projectId" project-id="{{id}}">
    <h2
      class="mt-2 mb-5 titleHomepage"
      contenteditable="true"
      id="projectName"
    >{{name}}</h2>

    <p
      class="mb-10"
      contenteditable="true"
      id="projectDescription"
    >{{description}}</p>
    <p class="createdProject">Created by
      {{user.name}}
      on
      {{format_date date_created}}</p>
  </div>

  {{#if logged_in}}
    <button
      class="btn btn-primary mt-5 projectBtn modifyPostBtn"
      type="button"
      modif-id="{{id}}"
    >
      Modify Post
    </button>

    <form class="row customizedForm" id="customizedForm">
      <div class="col-12">
        <input
          name="commentUsername"
          id="commentUsername"
          placeholder="Add your name"
          value=""
          class="form-input w-100"
        />
      </div>
      <div class="col-12">
        <textarea
          placeholder="Leave a comment"
          for="post-comment"
          class="form-input"
          id="commentText"
          name="post-comment"
          class="form-input w-100"
        ></textarea>
        <button class="btn btn-primary projectBtn addCommentBtn" type="submit">
          Add comment</button>
      </div>
    </form>
  {{/if}}
  <section class="comments" id="comment-container"></section>
</div>

<script src="/js/index.js"></script>